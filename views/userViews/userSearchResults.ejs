<%- include('./usersTemplates/header.ejs') %>
<%- include('./usersTemplates/navBarUsers.ejs') %>

<main>

    <h5 class="centerText">Search Results</h5>

    <%- include('./usersTemplates/userSearchBar.ejs') %>

    <div class="headImgBlock">
        <!-- imagen de articulo -->
    </div>

    <% if (results) { %>

        <% results.forEach(data => { %>
          <article class="card centerText">
            <div class="card-image"> <!--IMAGEN-->
                <img src="<%= data.photo %>" alt="DescripciÃ³n de la imagen">
            </div>
            <div class="card-title"> <!--Titulo-->
                <h2><%= data.title %></h2>
            </div>
            <div class="card-date"><!--fecha-->
                <h5><%= data.date %></h5>
            </div>    
            <div class="card-text centerText"> <!--extracto-->
              <p><%= data.extract %></p>
            </div>
            <div class="card-small-text margin2topbot">
              <a class="articleBtn" href="/read-more/<%= data._id %>">See more</a>
            </div>
            <div class="card-small-text margin3topbot">
              <a class="articleBtn margin2topbot" href="/admin/edit-form/<%= data._id %>"">Edit</a>
            </div>
            <div class="card-small-text margin3topbot">
              <a class="articleBtn margin2topbot" href="/admin/delete/<%= data._id %>">Delete</a>
            </div>
          </article>
        <% }) %>
  
        <% } else { %>
    
          <div class="centerDiv">
            <p class="error-message centerText">Ops! No articles found</p>
          </div>
          
          <% } %>
  
</main>


<%- include('./usersTemplates/footer.ejs') %>